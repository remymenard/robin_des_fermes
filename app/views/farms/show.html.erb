<div class="owl-carousel owl-theme">
  <div class="item">
    <%= cl_image_tag @highlighted_photo.key%>
  </div>
  <div class="item">
    <%= cl_image_tag @second_photo&.key, class: "second-photo"  %>
  </div>
  <div class="item">
    <%= cl_image_tag @third_photo&.key, class: "third-photo"  %>
  </div>
  <div class="item">
    <%= cl_image_tag @fourth_photo&.key, class: "fourth-photo"  %>
  </div>
  <div class="item">
    <%= cl_image_tag @conquest_photo&.key, class: "conquest-photo"  %>
  </div>
</div>


  <div class="farm">
    <div class="description">

    </div>

  </div>
<div class="container">

  <div class="products">
    <% @products_by_category.each do |category, products|  %>
      <h4><%= t('.category', name: category.name.capitalize) %></h4>
      <div class="d-flex all-card-product">
        <% products.each do |product| %>

          <div class="card-product">
            <%= link_to product_path(product) do  %>
              <%= cl_image_tag product.photo.key, height: 64, width: 64, crop: :fill %>
            <% end %>

            <div class="informations">

              <div class = "name">
                <p><%= t('.product', name: product.name) %></p>
              </div>

              <div class="price">

                <div>
                  <div class = "unit-price">
                    <p> CHF <%= product.price_cents * 100 %></p>
                  </div>

                  <div class = "unit">
                    <p><%= product.unit %></p>
                  </div>

                  <div class = "kg-price">
                    <p><%= product.price_per_unit_cents * 100 %> CHF/kg</p>
                  </div>

                </div>

                <div class = "d-flex">
                  <!--
                  <%= link_to "-", "#", class: "btn btn-number"%>

                  <div class="number">
                    <p>0</p>
                  </div>
                  -->

                  <button class="btn btn-number add-to-basket" data-path="<%= increment_basket_order_line_item_path(product)%>" data-token="<%= form_authenticity_token %>" >+</button>


                </div>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    <% end %>
    <h2><%= t('.location') %></h2>
    <div id="map_show"
      style="width: 1170px; height: 544px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

</div>
