<div class="farms">
  <div class="search d-flex">

    <span>Recherche : </span>

    <%= link_to "#", class: "d-flex navbar-brand btn" do %>
      <%= image_tag 'icons/map_marker.png', class: "map-marker" %>
    <% end %>
    <div class="d-flex select">
      <%= form_tag farms_path, method: :get do %>
        <%= select_tag :category,
          options_from_collection_for_select(@categories, :name, :name, @category&.name),
          onchange: 'this.form.submit();',
          class: "form-control custom-select",
          prompt: "Catégorie"
        %>
      <% end %>
    </div>

  </div>

  <div class="cards col col-lg-6">
    <% @farms.each do |farm| %>

      <div class="d-flex farm">

        <div>
          <%= cl_image_tag farm.photos.first.key, height: 209, width: 207, crop: :fill, class: "photo-farm" %>
        </div>

        <div>
          <div class = "user d-flex">
            <%= cl_image_tag farm.user.photo.key, height: 24, width: 24, crop: :fill %>
            <p><%= farm.user.name  %></p>
          </div>

          <div class="informations">
            <h6> <%= farm.name  %></h6>

           <div class="d-flex">
              <p>Labels :
                <% farm.labels.each do |label| %>
                  <div class='label'>
                    <%= image_tag "labels/#{label}-label.png", class: "label" %>
                  </div>
                <%end%>
              </p>
            </div>

            <div class="d-flex information">
              <p>Catégories : </p>
              <% farm.categories.each do |category| %>
                <div class='category-photo'><%= cl_image_tag category.photo.key %></div>
              <% end %>
            </div>

            <div class="d-flex information">
              <p>Nombre de ventes : </p>
              <p> 19</p>
            </div>

            <div class="d-flex information">
              <p>Adhérents RDF depuis : </p>
              <p><%= farm.created_at.strftime("%Y.%m.%d")  %></p>
            </div>

            <div class="d-flex information">
              <p>Adresse : </p>
              <p><%= farm.address  %></p>
            </div>

            <div class="d-flex information">
              <p>Ouvertures</p>
              <p><%= farm.opening_time %></p>
            </div>
          </div>

        </div>
      </div>
    <% end  %>

  </div>
</div>
