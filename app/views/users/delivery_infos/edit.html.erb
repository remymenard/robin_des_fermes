<div class="edit-delivery-infos">
  <div class = "sign">
    <div class="container d-flex">
      <div class="sign-in d-flex justify-content-center align-items-center flex-column">

        <%= simple_form_for(@user, as: :user, method: :patch, url: users_delivery_infos_path) do |f| %>

          <div class="d-flex flex-column">
            <%= f.input :address_line_1,
                        class: "row w-100",
                        label: t('devise.registrations.new.address'),
                          placeholder: t('devise.registrations.new.address')%>

              <%= f.input :zip_code,
                          class: "row w-100",
                          label: t('devise.registrations.new.zip_code'),
                          placeholder: t('devise.registrations.new.zip_code')%>
              <%= f.input :city,
                          label: t('devise.registrations.new.city'),
                          placeholder: t('devise.registrations.new.city')%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, t('.connection') %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
