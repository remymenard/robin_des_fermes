<div class="successful">
  <h1><%= t("orders.redirect.payments.title_line_1") %></h1>
  <h1><%= t("orders.redirect.payments.title_line_2") %></h1>
  <span class="font-weight-bold mt-3"><%= t("orders.redirect.payments.subtitle_line_1") %><br/>
    <%= t("orders.redirect.payments.subtitle_line_2") %><br>
    <br>
    <% unless current_user&.is_companion %>
      <%= t('orders.redirect.payments.subtitle_line_3', price: @order&.estimated_economy_delivery_price) %><br>
      <%= t("orders.redirect.payments.subtitle_line_4") %>
    <% end %>
  </span>
  <span class="my-4"><%= t("orders.redirect.payments.thanks_line_1") %><br/>
    <%= t("orders.redirect.payments.thanks_line_2") %></span>
  <%= link_to t("orders.redirect.payments.back_button"), root_path, class: "btn btn-primary btn-lg btn-block" %>
  <%= image_tag "bag_confirmation.png", class: "bag" %>
</div>
