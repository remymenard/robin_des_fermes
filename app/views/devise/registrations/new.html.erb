<body class = "sign">
  <div class="container d-flex">
    <div class="sign-in">
      <%= image_tag "logos/rdf_green.png", alt: "alttext", center: "mx-auto d-block" %>
      <p>Inscrivez-vous pour accéder aux produits</p>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :gender, as: :radio_buttons, collection: User::GENDER, wrapper: :horizontal_collection_inline, label: false %>

          <div class="d-flex name">
            <%= f.input :first_name,
                        label: false,
                        placeholder: "Prénom"%>
            <%= f.input :last_name,
                        label: false,
                        placeholder: "Nom"%>
          </div>
          <%= f.input :email,
                      label: false,
                      placeholder: "Adresse email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: false,
                      placeholder: "Mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: false,
                      placeholder: "Confirmer le mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :address,
                      label: false,
                      placeholder: "Rue et numéro"%>

          <div class="d-flex name">
            <%= f.input :code_postal,
                        label: false,
                        placeholder: "Code postal"%>
            <%= f.input :city,
                        label: false,
                        placeholder: "Localité"%>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "SE CONNECTER" %>
        </div>
      <% end %>

    </div>
  </div>
</body>
