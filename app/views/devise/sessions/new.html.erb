<body class = "sign">
  <div class="container d-flex">
    <div class="sign-in">
      <%= image_tag "logos/rdf_green.png", alt: "alttext", center: "mx-auto d-block" %>
      <p>Connectez-vous pour accéder à votre compte</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: false,
                      placeholder: "Adresse email",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: false,
                      placeholder: "Mot de passe",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me,
                      label: "Rester connecté",
                      as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Se connecter" %>
        </div>
      <% end %>
      <p><%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %></p>
    </div>
  </div>
  <div class="container d-flex">
    <p class = "log-in-link">Envie de nous rejoindre ? <%= link_to "Créer un compte", new_registration_path(resource_name) %></p>
  </div>

</body>
