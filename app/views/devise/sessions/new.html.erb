<div class = "sign">
  <div class="container d-flex">
    <div class="log-in">
      <%= image_tag "logos/rdf_green.png", alt: "alttext", center: "mx-auto d-block" %>
      <p><%= t('.title') %></p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: false,
                      placeholder: t('.email'),
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: false,
                      placeholder: t('.password'),
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me,
                      label: t('.stay_connected'),
                      as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('.connection') %>
        </div>
      <% end %>
      <p><%= link_to t('.forget'), new_password_path(resource_name) %></p>
    </div>
  </div>
  <div class="container d-flex">
    <p class = "log-in-link"><%= t('.join') %> <%= link_to t('.new_account'), new_registration_path(resource_name) %></p>
  </div>

</div>
