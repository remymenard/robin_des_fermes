<div class = "sign">
  <div class="container d-flex">
    <div class="log-in">
      <p class="title-connexion"><%= t('.title') %></p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs d-flex justify-content-center align-items-center">
          <%= f.input :email,
                      label: t('.email'),
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: t('.password'),
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me,
                      label: t('.stay_connected'),
                      as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('.connection') %>
          <p class = "log-in-link"><%= t('.join') %> </p>
          <%= link_to t('.new_account'), new_registration_path(resource_name), class: "new-account-btn" %>
        </div>
      <% end %>
      <p class = "log-in-link"><%= link_to t('.forget'), new_password_path(resource_name) %></p>
    </div>
  </div>

</div>
